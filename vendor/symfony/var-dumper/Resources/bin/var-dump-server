/**
 * Starts a dump server to collect and output dumps on a single place with multiple formats support.
 *
 * @author Maxime Steinhausser <maxime.steinhausser@gmail.com>
 */
use RectorPrefix2020DecSat\Psr\Log\LoggerInterface;
use RectorPrefix2020DecSat\Symfony\Component\Console\Application;
use RectorPrefix2020DecSat\Symfony\Component\Console\Input\ArgvInput;
use RectorPrefix2020DecSat\Symfony\Component\Console\Input\InputOption;
use RectorPrefix2020DecSat\Symfony\Component\Console\Logger\ConsoleLogger;
use RectorPrefix2020DecSat\Symfony\Component\Console\Output\ConsoleOutput;
use RectorPrefix2020DecSat\Symfony\Component\VarDumper\Command\ServerDumpCommand;
use RectorPrefix2020DecSat\Symfony\Component\VarDumper\Server\DumpServer;
function includeIfExists(string $file) : bool
{
    return \file_exists($file) && (include $file);
}
if (!\RectorPrefix2020DecSat\includeIfExists(__DIR__ . '/../../../../autoload.php') && !\RectorPrefix2020DecSat\includeIfExists(__DIR__ . '/../../vendor/autoload.php') && !\RectorPrefix2020DecSat\includeIfExists(__DIR__ . '/../../../../../../vendor/autoload.php')) {
    \fwrite(\STDERR, 'Install dependencies using Composer.' . \PHP_EOL);
    exit(1);
}
if (!\class_exists(\RectorPrefix2020DecSat\Symfony\Component\Console\Application::class)) {
    \fwrite(\STDERR, 'You need the "symfony/console" component in order to run the VarDumper server.' . \PHP_EOL);
    exit(1);
}
$input = new \RectorPrefix2020DecSat\Symfony\Component\Console\Input\ArgvInput();
$output = new \RectorPrefix2020DecSat\Symfony\Component\Console\Output\ConsoleOutput();
$defaultHost = '127.0.0.1:9912';
$host = $input->getParameterOption(['--host'], $_SERVER['VAR_DUMPER_SERVER'] ?? $defaultHost, \true);
$logger = \interface_exists(\RectorPrefix2020DecSat\Psr\Log\LoggerInterface::class) ? new \RectorPrefix2020DecSat\Symfony\Component\Console\Logger\ConsoleLogger($output->getErrorOutput()) : null;
$app = new \RectorPrefix2020DecSat\Symfony\Component\Console\Application();
$app->getDefinition()->addOption(new \RectorPrefix2020DecSat\Symfony\Component\Console\Input\InputOption('--host', null, \RectorPrefix2020DecSat\Symfony\Component\Console\Input\InputOption::VALUE_REQUIRED, 'The address the server should listen to', $defaultHost));
$app->add($command = new \RectorPrefix2020DecSat\Symfony\Component\VarDumper\Command\ServerDumpCommand(new \RectorPrefix2020DecSat\Symfony\Component\VarDumper\Server\DumpServer($host, $logger)))->getApplication()->setDefaultCommand($command->getName(), \true)->run($input, $output);
